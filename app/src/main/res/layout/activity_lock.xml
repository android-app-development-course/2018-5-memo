<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lock_bg"
    tools:context=".LockActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="124dp"
        android:layout_height="131dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094"
        app:srcCompat="@drawable/lock" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="输入密码"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/pw1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"

        app:bsb_auto_adjust_section_mark="true"
        app:bsb_bubble_color="@color/orange"
        app:bsb_bubble_text_color="@color/white"
        app:bsb_max="9"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/red"


        app:bsb_section_count="9"
        app:bsb_section_text_color="@color/yellow"
        app:bsb_section_text_position="below_section_mark"
        app:bsb_show_progress_in_float="false"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_thumb_color="@color/red"
        app:bsb_thumb_text_color="@color/white"
        app:bsb_track_color="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/pw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"

        app:bsb_bubble_color="@color/orange"
        app:bsb_thumb_color="@color/red"
        app:bsb_section_text_color="@color/yellow"
        app:bsb_thumb_text_color="@color/white"
        app:bsb_second_track_color="@color/red"
        app:bsb_bubble_text_color="@color/white"
        app:bsb_track_color="@color/light_grey"


        app:bsb_max="4"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_section_count="4"
        app:bsb_auto_adjust_section_mark="true"
        app:bsb_section_text_position="below_section_mark"
        app:bsb_show_progress_in_float="false"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613"
        />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/pw3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"

        app:bsb_bubble_color="@color/orange"
        app:bsb_bubble_text_color="@color/white"
        app:bsb_max="30"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/red"

        app:bsb_auto_adjust_section_mark="true"

        app:bsb_section_text_color="@color/yellow"
        app:bsb_show_progress_in_float="false"
        app:bsb_show_section_text="true"
        app:bsb_thumb_color="@color/red"
        app:bsb_thumb_text_color="@color/white"
        app:bsb_track_color="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />


</android.support.constraint.ConstraintLayout>